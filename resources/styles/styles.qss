/* 全局样式 */
* {
    font-family: "Segoe UI", "Microsoft YaHei", "Noto Sans", "Arial", sans-serif;
    font-size: 14px;
}

/* 登录和注册窗口 */
#LoginWindow, #RegisterWindow {
    background: transparent; /* 透明背景支持圆角 */
}

QWidget#centralWidget {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #FFF0F5, stop:1 #FCE4EC);
    border-radius: 12px;
}

/* 输入框 */
#usernameEdit, #passwordEdit, #nicknameEdit {
    padding: 10px;
    border: 2px solid #FFCDD2;
    border-radius: 6px;
    background-color: #FFFFFF;
    font-size: 14px;
    margin: 6px 0;
}

#usernameEdit:focus, #passwordEdit:focus, #nicknameEdit:focus {
    border-color: #C8E6C9; /* 绿色点缀 */
    outline: none;
}

/* 主要按钮 */
#loginButton, #registerButton, #backToLoginButton {
    padding: 10px 24px;
    font-size: 14px;
    font-weight: bold;
    border-radius: 6px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #F06292, stop:1 #EC407A);
    color: #FFFFFF;
    border: none;
    min-width: 100px;
}

#loginButton:hover, #registerButton:hover, #backToLoginButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                stop:0 #EC407A, stop:1 #D81B60);
}

